@model IEnumerable<college_management_back.Models.Subject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Course</th>
        <th>Teacher</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Course.Description)</td>
        <td>@Html.DisplayFor(modelItem => item.Teacher.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Description)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubjectID }) |
